function module {
    export _prompt="$prompt";
    export prompt="";
    eval "$(/apps/modules-v3.2.6a-64bit/Modules/bin/modulecmd bash "$@")";
    export _exit=$status; 
    export prompt="$_prompt";
    unset _prompt; 
    #test 0 = $_exit;
}

eval "$(zoxide init zsh)"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
